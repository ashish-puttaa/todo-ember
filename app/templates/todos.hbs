<div class="row p-5">
   <div class="col-md-4">
      {{#link-to 'todos.new' class="btn btn-success"}}
      Create Todo
      {{/link-to}}

      <hr>

      {{outlet}}
   </div>

   <div class="col-md-8">
      <div class="row">
         <div class="col-md-12">
            <form class="form-inline">
               <div class="form-group">
                  {{input type="text" class="form-control" placeholder="Search Todos..." id="search" value=filter}}
                  <button type="submit" class="btn btn-default">Search</button>
               </div>
            </form>
         </div>
      </div>

      <hr><br>

      {{#if filter}}
      {{#each todo in filteredTodos}}
      <div class="card p-3 mb-3">
         <div>
            <h4 class="todo-heading float-left"> {{#link-to 'todos.edit' todo.id}} {{todo.title}} {{/link-to}} </h4>
            <span class="todo-date badge badge-primary float-right">{{format-date todo.date}}</span>
         </div>
         {{format-markdown todo.body}}
      </div>
      {{/each}}

      {{else}}
      {{#each todo in sortedTodos}}
      <div class="card p-3 mb-3">
         <div>
            <h4 class="todo-heading float-left"> {{#link-to 'todos.edit' todo.id}} {{todo.title}} {{/link-to}} </h4>
            <span class="todo-date badge badge-primary float-right">{{format-date todo.date}}</span>
         </div>
         {{format-markdown todo.body}}
      </div>
      {{/each}}
      {{/if}}
   </div>
</div>